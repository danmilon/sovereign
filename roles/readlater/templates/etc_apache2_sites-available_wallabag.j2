<VirtualHost *:443>
    ServerName {{ wallabag_domain }}

    Include /etc/apache2/ssl.conf
    Include /etc/apache2/ssl.conf
    SSLCertificateKeyFile /etc/ssl/lets-encrypt/{{ wallabag_domain }}/key.pem
    SSLCertificateFile /etc/ssl/lets-encrypt/{{ wallabag_domain }}/cert.pem
    SSLCertificateChainFile /etc/ssl/lets-encrypt/{{ wallabag_domain }}/chain.pem

    DocumentRoot            /var/www/wallabag
    Options                 -Indexes

    ErrorLog                /var/log/apache2/wallabag.info-error_log
    CustomLog               /var/log/apache2/wallabag.info-access_log common

    <Directory /var/www/wallabag>
        AllowOverride All
        Order allow,deny
        allow from all
        DirectoryIndex index.php
    </Directory>
</VirtualHost>
